<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/display_circle_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/display_name_text_view"
        android:layout_width="0dp"
        android:hint="Name"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/display_circle_image_view"
        app:layout_constraintStart_toStartOf="@id/display_circle_image_view"
        app:layout_constraintEnd_toEndOf="@id/display_circle_image_view"/>

    <TextView
        android:id="@+id/main_age_text_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Age"
        app:layout_constraintTop_toBottomOf="@id/display_name_text_view"
        app:layout_constraintStart_toStartOf="@id/display_name_text_view"
        app:layout_constraintEnd_toEndOf="@id/display_name_text_view"/>

</android.support.constraint.ConstraintLayout>