<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_circle_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Name"
        android:layout_margin="50dp"
        app:layout_constraintEnd_toEndOf="@id/main_circle_image_view"
        app:layout_constraintStart_toStartOf="@id/main_circle_image_view"
        app:layout_constraintTop_toBottomOf="@id/main_circle_image_view" />

    <EditText
        android:id="@+id/main_age_edit_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Age"
        app:layout_constraintEnd_toEndOf="@id/main_name_edit_text"
        app:layout_constraintStart_toStartOf="@id/main_name_edit_text"
        app:layout_constraintTop_toBottomOf="@id/main_name_edit_text" />

    <Button
        android:id="@+id/main_upload_button"
        android:text="Upload Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>